<div class="box-content">

    <section>
        <!----------------------------->


           <form action=@Url.Content("~/Admin/Session/Create") class="form-horizontal" method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true)

            <fieldset>
                <legend></legend>

                <div class="control-group">
                    @Html.LabelFor(model => model.BeneficiaryClassID, "BeneficiaryClass", new { @class = "control-label" })
               
                <div class="controls">
                    @Html.DropDownList("BeneficiaryClassID", String.Empty)
                    @Html.ValidationMessageFor(model => model.BeneficiaryClassID)
                </div>
                     </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.InitialDate, new { @class = "control-label" })
                
                <div class="controls">
                    @Html.EditorFor(model => model.InitialDate, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.InitialDate)
                </div>
</div>
                <div class="control-group">
                    @Html.LabelFor(model => model.EndDate, new { @class = "control-label" })
               
                <div class="controls">
                    @Html.EditorFor(model => model.EndDate, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.EndDate)
                </div>
                     </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.Venue, new { @class = "control-label" })
               
                <div class="controls">
                    @Html.EditorFor(model => model.Venue, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.Venue)
                </div>
                     </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.Place, new { @class = "control-label" })
                
                <div class="controls">
                    @Html.EditorFor(model => model.Place, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.Place)
                </div>
                    </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.TeacherID, "Teacher", new { @class = "control-label" })
                
                <div class="controls">
                    @Html.DropDownList("TeacherID", String.Empty)
                    @Html.ValidationMessageFor(model => model.TeacherID)
                </div>
</div>
                <div class="control-group">
                    @Html.LabelFor(model => model.ProjectID, "Project", new { @class = "control-label" })
                
                <div class="controls">
                    @Html.DropDownList("ProjectID", String.Empty)
                    @Html.ValidationMessageFor(model => model.ProjectID)
                </div>
                    </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.SessionStatusID, "SessionStatus", new { @class = "control-label" })
                
                <div class="controls">
                    @Html.DropDownList("SessionStatusID", String.Empty)
                    @Html.ValidationMessageFor(model => model.SessionStatusID)
                </div>
</div>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <button type="reset" class="btn">Clear</button>
                </div>
            </fieldset>
         </form>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        <!--Close Section Layout-->
    </section>
</div>
