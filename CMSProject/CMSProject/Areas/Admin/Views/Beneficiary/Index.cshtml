@model IEnumerable<CMSProject.Areas.Admin.Models.Beneficiary>

@{
    ViewBag.Title = "Index";
}

<!--Start Section Layout-->
<div class="box-header well" data-original-title>
    <h2><i class="icon-user"></i>@ViewBag.CurrentPage</h2>
    @*<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>*@
</div>
<div class="box-content">

    <section>
        <!----------------------------->


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <tr>
        <th>
            ID
           @* @Html.DisplayNameFor(model => model.IdCardNumber)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Names)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastNames)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Community.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofRecord)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfBeneficiary.Description)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Names)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastNames)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Community.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofRecord)
        </td>
        <td>
            @if (item.ImagePath != null)
                        { 
                            <img src="@Url.Content(item.ImagePath)" style="width:50px;" />
                        }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TypeOfBeneficiary.Description)
        </td>
        <td>
            <a class="btn btn-success" href="@Url.Content("~/Admin/Beneficiary/Details/" + item.BeneficiaryID)">
                            <i class="icon-zoom-in icon-white"></i>
                            View                                            
									</a>
                        <a class="btn btn-info" href="@Url.Content("~/Admin/Beneficiary/Edit/" + item.BeneficiaryID)">
                            <i class="icon-edit icon-white"></i>
                            Edit                                            
									</a>
                        <a class="btn btn-danger" href="@Url.Content("~/Admin/Beneficiary/Delete/" + item.BeneficiaryID)">
                            <i class="icon-trash icon-white"></i>Delete
                            </a>
        </td>
    </tr>
}

</table>
 <!--Close Section Layout-->
    </section>
</div>
