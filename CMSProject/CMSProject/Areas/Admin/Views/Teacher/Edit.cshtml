@model CMSProject.Areas.Admin.Models.Teacher

@{
    ViewBag.Title = "Edit";
}

<!--Start Section Layout-->
<div class="box-header well" data-original-title>
    <h2><i class="icon-user"></i>@ViewBag.CurrentPage</h2>
    @*<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>*@
</div>
<div class="box-content">

    <section>
        <!----------------------------->


        <form action=@Url.Content("~/Admin/Teacher/Edit") class="form-horizontal" method="post" enctype="multipart/form-data">
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Teacher</legend>

                @Html.HiddenFor(model => model.TeacherID)

                <div class="control-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label" })
               
                <div class="controls">
                    @Html.EditorFor(model => model.Name, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
                     </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                
                <div class="controls">
                    @Html.EditorFor(model => model.LastName, new { @class = "span6 typeahead" })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
                    </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.Photo, new { @class = "control-label" })
                
                <div class="controls">
                    @if (Model.Photo != null)
                    {
                        @Html.HiddenFor(model => model.Photo, new { @class = "span6 typeahead" })
                        <img src="@Url.Content(Model.Photo)"  style="width:100px;" />
                    }
                    <input type="file" id="fileToUpload" name="file" />
                    @Html.ValidationMessageFor(model => model.Photo)
                </div>
                    </div>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="reset" class="btn">Clear</button>
                </div>
            </fieldset>
        </form>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        <!--Close Section Layout-->
    </section>
</div>
<!---->
